{
    "page": {
        "description": "Interactive WebGL painting simulation",
        "title": "Paint",
        "favicons": [
            {
                "path": "favicon-32x32.png",
                "resolution": "32x32"
            },
            {
                "path": "favicon-96x96.png",
                "resolution": "96x96"
            },
            {
                "path": "favicon-196x196.png",
                "resolution": "196x196"
            }
        ],
        "css": [
            "css/demopage-1.0.0.min.css"
        ],
        "scripts": [
            "scripts/ui-1.0.0.min.js",
            "scripts/gl-utils.js",
            "scripts/sampler2D.js",
            "scripts/background.js",
            "scripts/flowmap.js",
            "scripts/particles.js",
            "scripts/scene.js",
            "scripts/controls.js",
            "scripts/main.js"
        ]
    },
    "demo": {
        "title": "Paint",
        "github": "https://github.com/piellardj/paint-webgl",
        "description": [
            "This project is a WebGL simulation of a dynamic painting running entirely on GPU.\nYou can interact with it using the left mouse button."
        ],
        "links": [
            {
                "url": "https://github.com/piellardj/paint-webgl",
                "text": "Additional link"
            },
            {
                "url": "fakeURL",
                "text": "Another one"
            }
        ],
        "canvas": {
            "id": "glcanvas",
            "width": 768,
            "height": 432,
            "css": {
                "width": "96vw",
                "height": "54vw",
                "max-width": "1280px",
                "max-height": "720px"
            }
        },
        "indicators": [
            {
                "name": "fps",
                "id": "fps-text"
            }
        ],
        "control_blocks": [
            {
                "title": "Paint",
                "controls": [
                    {
                        "type": "range",
                        "id": "amount-slider",
                        "name": "Amount:",
                        "min": 0,
                        "max": 4,
                        "value": 2,
                        "step": 1,
                        "initial_state": ""
                    },
                    {
                        "type": "range",
                        "id": "size-slider",
                        "name": "Size:",
                        "min": 0.5,
                        "max": 5,
                        "value": 2,
                        "step": 0.1,
                        "initial_state": ""
                    },
                    {
                        "type": "range",
                        "id": "speed-slider",
                        "name": "Speed:",
                        "min": 0.1,
                        "max": 2.9,
                        "value": 1.5,
                        "step": 0.1,
                        "initial_state": ""
                    },
                    {
                        "type": "range",
                        "id": "resilience-slider",
                        "name": "Resilience:",
                        "min": 0,
                        "max": 0.1,
                        "value": 0.05,
                        "step": 0.005,
                        "initial_state": ""
                    },
                    {
                        "type": "checkbox",
                        "id": "show-brush-checkbox2",
                        "name": "Show:",
                        "initial_state": "checked"
                    }
                ]
            },
            {
                "title": "Brush",
                "controls": [
                    {
                        "type": "tabs",
                        "id": "gender-tabs",
                        "compact": true,
                        "group": "gender",
                        "name": "Gender",
                        "options": [
                            {
                                "value": "male",
                                "label": "Male"
                            },
                            {
                                "value": "female",
                                "label": "Female",
                                "checked": true
                            },
                            {
                                "value": "other",
                                "label": "Other"
                            }
                        ]
                    },
                    {
                        "type": "range",
                        "id": "brush-size-slider",
                        "name": "Radius:",
                        "min": 5,
                        "max": 100,
                        "value": 40,
                        "step": 0.1,
                        "initial_state": ""
                    },
                    {
                        "type": "checkbox",
                        "id": "show-brush-checkbox",
                        "name": "Show:",
                        "initial_state": "checked"
                    }
                ]
            },
            {
                "title": "Display",
                "controls": [
                    {
                        "type": "checkbox",
                        "id": "background-checkbox",
                        "name": "Background:",
                        "initial_state": ""
                    }
                ]
            }
        ]
    }
}
{
    "title": "Paint",
    "description": "Interactive paint simulation",
    "introduction": [
        "This project is a WebGL simulation of a dynamic painting running entirely on GPU. Each paint stroke is moving along an invisible vector field. You can interact with it using the left mouse button."
    ],
    "githubProjectName": "paint-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/gl-utils.js",
        "script/sampler2D.js",
        "script/background.js",
        "script/flowmap.js",
        "script/particles.js",
        "script/scene.js",
        "script/parameters.js",
        "script/main.js"
    ],
    "indicators": [
        {
            "id": "fps",
            "label": "Frames per second"
        },
        {
            "id": "number-of-particles",
            "label": "Number of particles"
        }
    ],
    "canvas": {
        "width": 1280,
        "height": 720,
        "enableFullscreen": false
    },
    "controlsSections": [
        {
            "title": "Paint",
            "controls": [
                {
                    "title": "Amount",
                    "type": "range",
                    "id": "amount-range-id",
                    "min": 0,
                    "max": 4,
                    "value": 2,
                    "step": 1
                },
                {
                    "title": "Stroke size",
                    "type": "range",
                    "id": "size-range-id",
                    "min": 0.5,
                    "max": 5,
                    "value": 2,
                    "step": 0.1
                },
                {
                    "title": "Speed",
                    "type": "range",
                    "id": "speed-range-id",
                    "min": 0.1,
                    "max": 2.9,
                    "value": 1.5,
                    "step": 0.1
                },
                {
                    "title": "Resilience",
                    "type": "range",
                    "id": "resilience-range-id",
                    "min": 0,
                    "max": 0.05,
                    "value": 0.01,
                    "step": 0.0001
                }
            ]
        },
        {
            "title": "Interactions",
            "controls": [
                {
                    "title": "Brush radius",
                    "type": "range",
                    "id": "brush-size-range-id",
                    "min": 5,
                    "max": 100,
                    "value": 85,
                    "step": 0.1
                },
                {
                    "title": "Show brush",
                    "type": "checkbox",
                    "id": "show-brush-checkbox-id",
                    "checked": true
                }
            ]
        },
        {
            "title": "Display",
            "controls": [
                {
                    "title": "Background",
                    "type": "checkbox",
                    "id": "show-background-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Show indicators",
                    "type": "checkbox",
                    "id": "indicators-checkbox-id",
                    "checked": true
                }
            ]
        }
    ]
}